@{
    Layout = "_LayoutWithoutFilter";
}

@model Ads.CoreService.Contracts.Dto.AdvertsInfoDto
@using Authentication.Contracts.CookieAuthentication

@{
    ViewData["Title"] = "Создание объявление";
}
@*<script src="~/js/AdsInfo.js" asp-append-version="true"></script>*@
<script src="~/js/Category.js" asp-append-version="true"></script>

<h2>Подать объявление</h2>

<hr />

<form asp-action="Create" enctype="multipart/form-data" class="active">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group form-row">
        <label class="control-label col-3" for="inputName">Название объявления</label>
        <input name="Name" class="form-control col-6" id="inputName" />
    </div>
    <div class="form-group form-row">
        <label class="control-label col-3" for="inputDescription">Описание объявления</label>
        <textarea class="form-control col-6" id="inputDescription" name="Description" rows="3"></textarea>
    </div>

    <div class="form-group form-row">
        <label class="control-label col-3" for="selectCategories">Категория</label>
        <select class="form-control col-3" id="selectCategories" onchange="ChangeCategory()">
            <option>Любая категория</option>
        </select>
        <input type="hidden" id="inputCategory" name="CategoryId" />
    </div>

    <div class="form-group form-row">
        <label for="selectRegion" class="control-label col-3">Регион</label>
        <select class="form-control col-3" id="selectRegion" onchange="ChangeRegion();">
            <option>Любой регион</option>
        </select>
        <input type="hidden" id="inputRegion" name="RegionId" />
    </div>

    <div class="form-group form-row">
        <label for="selectCity" class="control-label col-3">Город</label>
        <select class="form-control col-3" id="selectCity" onchange="ChangeCity()">
            <option>Любой город</option>
        </select>
        <input type="hidden" id="inputCity" name="CityId" />
    </div>

    <div class="form-group form-row">
        <label for="inputAddress" class="control-label col-3">Адрес</label>
        <input name="Address" class="form-control col-3" id="inputAddress" />
    </div>

    <div class="form-group form-row">
        <label for="inputType" class="control-label col-3">Тип объявления</label>
        <select class="form-control col-3" name="TypeId" id="inputType">
            @foreach (var item in Model.Types)
            {
                <option value="@item.Id">@item.Id @item.Type</option>}
        </select>
    </div>

    <div class="form-group form-row">
        <label for="inputStatus" class="control-label col-3">Статус объявления</label>
        <select class="form-control col-3" name="StatusId" id="inputStatus">
            @foreach (var item in Model.Statuses)
            {
                <option value="@item.Id">@item.Id @item.Name</option>
            }
        </select>
    </div>

    <div class="form-group form-row">
        <label for="inputPrice" class="control-label col-3">Цена</label>
        <input name="Price" class="form-control col-1" id="inputPrice" placeholder="₽"/>
    </div>

    <div class="form-group">
        <input name="Photos" multiple type="file" />
    </div>

    <div class="form-group">
        <input hidden name="Context" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Добавить" class="btn btn-primary" />
    </div>
</form>

